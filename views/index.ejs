<%- include('partials/header.ejs') %>
<body>
    <%- include('partials/navbar.ejs') %>
    <div class="container">
        <hr>
        <h1>Perguntas e Respostas</h1>
        <hr>
        <a href="/ask" class="btn btn-primary">Perguntar</a>
        <hr>
        <% asks.forEach(ask => { %>
            <br>
            <div class="card">
                <div class="card-body">
                    <h3><%= ask.title %></h3>
                </div>
                    
                <div class="card-footer">
                    <button class="btn btn-primary">Responder</button>
                </div>
            </div>
        <% }) %>
    </div>
</body>
